{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "ollama_url": "http://localhost:11434",
  "model": "moondream",
  "max_jobs": 4,
  "timeout_secs": 120,
  "retry": {
    "max_retries": 3,
    "initial_backoff_ms": 1000,
    "max_backoff_ms": 30000,
    "multiplier": 2.0
  },
  "naming": {
    "style": "kebab-case",
    "max_length": 50,
    "include_date": false,
    "date_format": "%Y-%m-%d",
    "preserve_original_as_tag": true
  },
  "tags": {
    "auto_generate": true,
    "max_auto_tags": 5,
    "default_tags": [],
    "separator": "_"
  },
  "watch": {
    "debounce_ms": 500,
    "recursive": true,
    "process_existing": false,
    "ignore_patterns": [
      ".*",
      "*~",
      "*.tmp",
      "*.swp"
    ]
  },
  "web": {
    "address": "127.0.0.1",
    "port": 8080,
    "enable_api": true
  },
  "logging": {
    "level": "info",
    "json": false
  },
  "filter": {
    "exclude_hidden": true,
    "exclude_patterns": []
  }
}
