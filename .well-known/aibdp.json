{
  "$schema": "https://consent-aware.org/schemas/aibdp/v1.json",
  "version": "1.0",
  "protocol": "AI Boundary Declaration Protocol",
  "issued": "2024-12-01",
  "expires": "2025-12-31",

  "identity": {
    "name": "eTMA Handler",
    "type": "open-source-project",
    "repository": "https://github.com/Hyperpolymath/tma-mark2",
    "license": "MIT",
    "spdx": "MIT"
  },

  "boundaries": {
    "training": {
      "permitted": true,
      "conditions": ["attribution", "license-compliance"],
      "excluded_paths": [
        "test/fixtures/sample_data/*",
        ".env*"
      ]
    },
    "inference": {
      "permitted": true,
      "conditions": ["non-deceptive-use"]
    },
    "indexing": {
      "permitted": true,
      "conditions": []
    },
    "scraping": {
      "permitted": true,
      "rate_limit": "reasonable",
      "respect_robots_txt": true
    },
    "embedding": {
      "permitted": true,
      "conditions": ["attribution"]
    },
    "summarization": {
      "permitted": true,
      "conditions": ["accuracy", "context-preservation"]
    },
    "code_generation": {
      "permitted": true,
      "conditions": ["license-compliance", "attribution-on-substantial-use"]
    },
    "modification": {
      "permitted": true,
      "conditions": ["license-compliance"]
    }
  },

  "consent": {
    "default": "permit-with-conditions",
    "withdrawal_mechanism": "security@example.org",
    "audit_requests": true
  },

  "data_classification": {
    "contains_pii": false,
    "contains_secrets": false,
    "contains_proprietary": false,
    "sensitivity_level": "public"
  },

  "attribution": {
    "required": true,
    "format": "eTMA Handler (MIT License) - https://github.com/Hyperpolymath/tma-mark2",
    "minimum": "project-name-and-license"
  },

  "contact": {
    "general": "https://github.com/Hyperpolymath/tma-mark2/issues",
    "security": "security@example.org",
    "consent_inquiries": "https://github.com/Hyperpolymath/tma-mark2/discussions"
  },

  "related": {
    "robots_txt": "/robots.txt",
    "llms_txt": "/llms.txt",
    "humans_txt": "/.well-known/humans.txt",
    "security_txt": "/.well-known/security.txt",
    "ai_txt": "/.well-known/ai.txt"
  },

  "extensions": {}
}
